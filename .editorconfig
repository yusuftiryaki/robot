# OBA - Editor Configuration
# Bu dosya tüm editörlerde tutarlı formatlamayı sağlar
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{sh,bash}]
end_of_line = lf
indent_size = 2

[*.{py}]
end_of_line = lf
indent_size = 4
max_line_length = 88

[*.{json,yaml,yml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

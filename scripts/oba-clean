#!/bin/bash
# -*- coding: utf-8 -*-
#
# Otonom BahÃ§e AsistanÄ± (OBA) - Temizlik Scripti
# ====================================
#
# Bu script geÃ§ici dosyalarÄ± ve eski loglarÄ± temizler.
#

# Proje ana dizinine git
cd "$(dirname "$0")/.."

# Renk kodlarÄ±
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
PURPLE='\033[0;35m'
CYAN='\033[0;36m'
NC='\033[0m' # No Color

# Banner
echo -e "${CYAN}"
echo "ğŸ§¹ ROBOT TEMÄ°ZLÄ°K ARACI"
echo "======================="
echo -e "${NC}"

# Parametreleri kontrol et
CLEAN_TYPE="temp"
FORCE=false

for arg in "$@"; do
    case $arg in
        logs)
            CLEAN_TYPE="logs"
            echo -e "${BLUE}ğŸ“ Log dosyalarÄ± temizlenecek${NC}"
            ;;
        cache)
            CLEAN_TYPE="cache"
            echo -e "${BLUE}ğŸ’¾ Cache dosyalarÄ± temizlenecek${NC}"
            ;;
        all)
            CLEAN_TYPE="all"
            echo -e "${BLUE}ğŸ§¹ Tam temizlik yapÄ±lacak${NC}"
            ;;
        temp)
            CLEAN_TYPE="temp"
            echo -e "${BLUE}ğŸ—‘ï¸ GeÃ§ici dosyalar temizlenecek${NC}"
            ;;
        force|-f)
            FORCE=true
            echo -e "${YELLOW}âš ï¸ Zorla temizlik modu aktif${NC}"
            ;;
        help|-h|--help)
            echo "KullanÄ±m: oba-clean [temizlik tipi] [seÃ§enekler]"
            echo ""
            echo "Temizlik Tipleri:"
            echo "  temp              GeÃ§ici dosyalar (varsayÄ±lan)"
            echo "  logs              Eski log dosyalarÄ±"
            echo "  cache             Cache ve pycache dosyalarÄ±"
            echo "  all               TÃ¼m geÃ§ici dosyalar"
            echo ""
            echo "SeÃ§enekler:"
            echo "  force, -f         Onay istemeden temizle"
            echo "  help              Bu yardÄ±mÄ± gÃ¶ster"
            echo ""
            echo "Ã–rnekler:"
            echo "  oba-clean                 GeÃ§ici dosyalarÄ± temizle"
            echo "  oba-clean logs            Eski loglarÄ± temizle"
            echo "  oba-clean all force       TÃ¼mÃ¼nÃ¼ zorla temizle"
            exit 0
            ;;
        *)
            echo -e "${RED}âŒ Bilinmeyen parametre: $arg${NC}"
            echo "YardÄ±m iÃ§in: oba-clean help"
            exit 1
            ;;
    esac
done

# YardÄ±mcÄ± fonksiyonlar
get_file_count_and_size() {
    local pattern="$1"
    local count=0
    local size=0

    while IFS= read -r -d '' file; do
        if [[ -f "$file" ]]; then
            count=$((count + 1))
            size=$((size + $(stat -f%z "$file" 2>/dev/null || stat -c%s "$file" 2>/dev/null || echo 0)))
        fi
    done < <(find . -name "$pattern" -type f -print0 2>/dev/null)

    echo "$count:$size"
}

format_size() {
    local size=$1
    if [[ $size -gt 1073741824 ]]; then
        echo "$(( size / 1073741824 )) GB"
    elif [[ $size -gt 1048576 ]]; then
        echo "$(( size / 1048576 )) MB"
    elif [[ $size -gt 1024 ]]; then
        echo "$(( size / 1024 )) KB"
    else
        echo "$size bytes"
    fi
}

confirm_action() {
    local message="$1"
    if $FORCE; then
        return 0
    fi

    echo -n "$message (y/N): "
    read -r response
    if [[ "$response" =~ ^[Yy]$ ]]; then
        return 0
    else
        return 1
    fi
}

clean_temp_files() {
    echo -e "${CYAN}ğŸ—‘ï¸ GEÃ‡Ä°CÄ° DOSYA TEMÄ°ZLÄ°ÄÄ°${NC}"
    echo "=========================="

    local total_files=0
    local total_size=0

    # Python cache dosyalarÄ±
    echo "ğŸ Python cache dosyalarÄ± kontrol ediliyor..."
    local pycache_info=$(get_file_count_and_size "__pycache__")
    local pycache_count=$(echo "$pycache_info" | cut -d: -f1)
    local pycache_size=$(echo "$pycache_info" | cut -d: -f2)

    if [[ $pycache_count -gt 0 ]]; then
        echo "   ğŸ“ $pycache_count __pycache__ klasÃ¶rÃ¼ ($(format_size $pycache_size))"
        total_files=$((total_files + pycache_count))
        total_size=$((total_size + pycache_size))
    fi

    # .pyc dosyalarÄ±
    local pyc_info=$(get_file_count_and_size "*.pyc")
    local pyc_count=$(echo "$pyc_info" | cut -d: -f1)
    local pyc_size=$(echo "$pyc_info" | cut -d: -f2)

    if [[ $pyc_count -gt 0 ]]; then
        echo "   ğŸ $pyc_count .pyc dosyasÄ± ($(format_size $pyc_size))"
        total_files=$((total_files + pyc_count))
        total_size=$((total_size + pyc_size))
    fi

    # GeÃ§ici test dosyalarÄ±
    local tmp_info=$(get_file_count_and_size "*.tmp")
    local tmp_count=$(echo "$tmp_info" | cut -d: -f1)
    local tmp_size=$(echo "$tmp_info" | cut -d: -f2)

    if [[ $tmp_count -gt 0 ]]; then
        echo "   ğŸ“„ $tmp_count .tmp dosyasÄ± ($(format_size $tmp_size))"
        total_files=$((total_files + tmp_count))
        total_size=$((total_size + tmp_size))
    fi

    # .DS_Store dosyalarÄ± (macOS)
    if [[ "$(uname)" == "Darwin" ]]; then
        local ds_info=$(get_file_count_and_size ".DS_Store")
        local ds_count=$(echo "$ds_info" | cut -d: -f1)
        local ds_size=$(echo "$ds_info" | cut -d: -f2)

        if [[ $ds_count -gt 0 ]]; then
            echo "   ğŸ $ds_count .DS_Store dosyasÄ± ($(format_size $ds_size))"
            total_files=$((total_files + ds_count))
            total_size=$((total_size + ds_size))
        fi
    fi

    if [[ $total_files -eq 0 ]]; then
        echo -e "${GREEN}âœ… Temizlenecek geÃ§ici dosya bulunamadÄ±${NC}"
        return 0
    fi

    echo ""
    echo -e "${YELLOW}ğŸ“Š Toplam: $total_files dosya ($(format_size $total_size))${NC}"

    if confirm_action "Bu dosyalarÄ± silmek istediÄŸinizden emin misiniz?"; then
        echo ""
        echo "ğŸ§¹ Temizlik baÅŸlÄ±yor..."

        # Python cache temizliÄŸi
        if [[ $pycache_count -gt 0 ]]; then
            find . -type d -name "__pycache__" -exec rm -rf {} + 2>/dev/null || true
            echo -e "${GREEN}âœ… __pycache__ klasÃ¶rleri temizlendi${NC}"
        fi

        # .pyc dosyalarÄ±
        if [[ $pyc_count -gt 0 ]]; then
            find . -name "*.pyc" -delete 2>/dev/null || true
            echo -e "${GREEN}âœ… .pyc dosyalarÄ± temizlendi${NC}"
        fi

        # .tmp dosyalarÄ±
        if [[ $tmp_count -gt 0 ]]; then
            find . -name "*.tmp" -delete 2>/dev/null || true
            echo -e "${GREEN}âœ… .tmp dosyalarÄ± temizlendi${NC}"
        fi

        # .DS_Store dosyalarÄ±
        if [[ "$(uname)" == "Darwin" ]] && [[ $ds_count -gt 0 ]]; then
            find . -name ".DS_Store" -delete 2>/dev/null || true
            echo -e "${GREEN}âœ… .DS_Store dosyalarÄ± temizlendi${NC}"
        fi

        echo -e "${GREEN}ğŸ‰ GeÃ§ici dosya temizliÄŸi tamamlandÄ±!${NC}"
    else
        echo -e "${YELLOW}âŒ Temizlik iptal edildi${NC}"
    fi

    echo ""
}

clean_log_files() {
    echo -e "${CYAN}ğŸ“ LOG DOSYA TEMÄ°ZLÄ°ÄÄ°${NC}"
    echo "======================"

    if [[ ! -d "logs" ]]; then
        echo -e "${YELLOW}ğŸ“­ Log klasÃ¶rÃ¼ bulunamadÄ±${NC}"
        return 0
    fi

    # 7 gÃ¼nden eski log dosyalarÄ±
    local old_logs=$(find logs -name "*.log" -type f -mtime +7 2>/dev/null | wc -l)
    local old_log_size=0

    if [[ $old_logs -gt 0 ]]; then
        old_log_size=$(find logs -name "*.log" -type f -mtime +7 -exec stat -f%z {} + 2>/dev/null | awk '{sum+=$1} END {print sum}' ||
                      find logs -name "*.log" -type f -mtime +7 -exec stat -c%s {} + 2>/dev/null | awk '{sum+=$1} END {print sum}' || echo 0)
    fi

    # BÃ¼yÃ¼k log dosyalarÄ± (>10MB)
    local large_logs=$(find logs -name "*.log" -type f -size +10M 2>/dev/null | wc -l)

    # Rotated log dosyalarÄ± (.1, .2, etc.)
    local rotated_logs=$(find logs -name "*.log.*" -type f 2>/dev/null | wc -l)
    local rotated_log_size=0

    if [[ $rotated_logs -gt 0 ]]; then
        rotated_log_size=$(find logs -name "*.log.*" -type f -exec stat -f%z {} + 2>/dev/null | awk '{sum+=$1} END {print sum}' ||
                          find logs -name "*.log.*" -type f -exec stat -c%s {} + 2>/dev/null | awk '{sum+=$1} END {print sum}' || echo 0)
    fi

    echo "ğŸ“Š Log durumu:"
    echo "   ğŸ“… 7+ gÃ¼n eski loglar: $old_logs dosya ($(format_size $old_log_size))"
    echo "   ğŸ“ˆ BÃ¼yÃ¼k loglar (>10MB): $large_logs dosya"
    echo "   ğŸ”„ Rotated loglar: $rotated_logs dosya ($(format_size $rotated_log_size))"

    local total_clean_files=$((old_logs + rotated_logs))
    local total_clean_size=$((old_log_size + rotated_log_size))

    if [[ $total_clean_files -eq 0 ]]; then
        echo -e "${GREEN}âœ… Temizlenecek log dosyasÄ± bulunamadÄ±${NC}"

        # BÃ¼yÃ¼k dosyalar iÃ§in uyarÄ±
        if [[ $large_logs -gt 0 ]]; then
            echo -e "${YELLOW}ğŸ’¡ $large_logs bÃ¼yÃ¼k log dosyasÄ± mevcut, manuel kontrol edilebilir${NC}"
        fi

        return 0
    fi

    echo ""
    echo -e "${YELLOW}ğŸ“Š Temizlenecek: $total_clean_files dosya ($(format_size $total_clean_size))${NC}"

    if confirm_action "Bu log dosyalarÄ±nÄ± silmek istediÄŸinizden emin misiniz?"; then
        echo ""
        echo "ğŸ§¹ Log temizliÄŸi baÅŸlÄ±yor..."

        # Eski log dosyalarÄ±nÄ± sil
        if [[ $old_logs -gt 0 ]]; then
            find logs -name "*.log" -type f -mtime +7 -delete 2>/dev/null || true
            echo -e "${GREEN}âœ… Eski log dosyalarÄ± temizlendi${NC}"
        fi

        # Rotated log dosyalarÄ±nÄ± sil
        if [[ $rotated_logs -gt 0 ]]; then
            find logs -name "*.log.*" -type f -delete 2>/dev/null || true
            echo -e "${GREEN}âœ… Rotated log dosyalarÄ± temizlendi${NC}"
        fi

        # BÃ¼yÃ¼k log dosyalarÄ±nÄ± truncate et
        if [[ $large_logs -gt 0 ]]; then
            echo -n "BÃ¼yÃ¼k log dosyalarÄ±nÄ± kÄ±saltmak ister misiniz? (y/N): "
            if $FORCE || { read -r response && [[ "$response" =~ ^[Yy]$ ]]; }; then
                find logs -name "*.log" -type f -size +10M -exec truncate -s 1M {} \; 2>/dev/null || true
                echo -e "${GREEN}âœ… BÃ¼yÃ¼k log dosyalarÄ± kÄ±saltÄ±ldÄ±${NC}"
            fi
        fi

        echo -e "${GREEN}ğŸ‰ Log temizliÄŸi tamamlandÄ±!${NC}"
    else
        echo -e "${YELLOW}âŒ Log temizliÄŸi iptal edildi${NC}"
    fi

    echo ""
}

clean_cache_files() {
    echo -e "${CYAN}ğŸ’¾ CACHE TEMÄ°ZLÄ°ÄÄ°${NC}"
    echo "=================="

    local total_files=0
    local total_size=0

    # Python __pycache__ klasÃ¶rleri
    local pycache_dirs=$(find . -type d -name "__pycache__" 2>/dev/null | wc -l)
    if [[ $pycache_dirs -gt 0 ]]; then
        local pycache_size=$(find . -type d -name "__pycache__" -exec du -sb {} + 2>/dev/null | awk '{sum+=$1} END {print sum}' || echo 0)
        echo "   ğŸ $pycache_dirs __pycache__ klasÃ¶rÃ¼ ($(format_size $pycache_size))"
        total_files=$((total_files + pycache_dirs))
        total_size=$((total_size + pycache_size))
    fi

    # pytest cache
    if [[ -d ".pytest_cache" ]]; then
        local pytest_size=$(du -sb .pytest_cache 2>/dev/null | cut -f1 || echo 0)
        echo "   ğŸ§ª pytest cache ($(format_size $pytest_size))"
        total_files=$((total_files + 1))
        total_size=$((total_size + pytest_size))
    fi

    # Coverage dosyalarÄ±
    local coverage_files=0
    for file in .coverage htmlcov/; do
        if [[ -e "$file" ]]; then
            coverage_files=$((coverage_files + 1))
            if [[ -f "$file" ]]; then
                local file_size=$(stat -f%z "$file" 2>/dev/null || stat -c%s "$file" 2>/dev/null || echo 0)
                total_size=$((total_size + file_size))
            elif [[ -d "$file" ]]; then
                local dir_size=$(du -sb "$file" 2>/dev/null | cut -f1 || echo 0)
                total_size=$((total_size + dir_size))
            fi
        fi
    done

    if [[ $coverage_files -gt 0 ]]; then
        echo "   ğŸ“Š $coverage_files coverage dosyasÄ±"
        total_files=$((total_files + coverage_files))
    fi

    # Node modules (eÄŸer varsa)
    if [[ -d "node_modules" ]]; then
        local node_size=$(du -sb node_modules 2>/dev/null | cut -f1 || echo 0)
        echo "   ğŸ“¦ node_modules ($(format_size $node_size))"
        total_files=$((total_files + 1))
        total_size=$((total_size + node_size))
    fi

    if [[ $total_files -eq 0 ]]; then
        echo -e "${GREEN}âœ… Temizlenecek cache dosyasÄ± bulunamadÄ±${NC}"
        return 0
    fi

    echo ""
    echo -e "${YELLOW}ğŸ“Š Toplam: $total_files Ã¶ÄŸe ($(format_size $total_size))${NC}"

    if confirm_action "Bu cache dosyalarÄ±nÄ± silmek istediÄŸinizden emin misiniz?"; then
        echo ""
        echo "ğŸ§¹ Cache temizliÄŸi baÅŸlÄ±yor..."

        # Python cache temizliÄŸi
        if [[ $pycache_dirs -gt 0 ]]; then
            find . -type d -name "__pycache__" -exec rm -rf {} + 2>/dev/null || true
            echo -e "${GREEN}âœ… Python cache temizlendi${NC}"
        fi

        # pytest cache
        if [[ -d ".pytest_cache" ]]; then
            rm -rf .pytest_cache
            echo -e "${GREEN}âœ… pytest cache temizlendi${NC}"
        fi

        # Coverage dosyalarÄ±
        if [[ $coverage_files -gt 0 ]]; then
            rm -f .coverage 2>/dev/null || true
            rm -rf htmlcov 2>/dev/null || true
            echo -e "${GREEN}âœ… Coverage dosyalarÄ± temizlendi${NC}"
        fi

        # Node modules
        if [[ -d "node_modules" ]]; then
            echo -n "node_modules klasÃ¶rÃ¼nÃ¼ silmek istediÄŸinizden emin misiniz? (y/N): "
            if $FORCE || { read -r response && [[ "$response" =~ ^[Yy]$ ]]; }; then
                rm -rf node_modules
                echo -e "${GREEN}âœ… node_modules temizlendi${NC}"
            fi
        fi

        echo -e "${GREEN}ğŸ‰ Cache temizliÄŸi tamamlandÄ±!${NC}"
    else
        echo -e "${YELLOW}âŒ Cache temizliÄŸi iptal edildi${NC}"
    fi

    echo ""
}

clean_all() {
    echo -e "${CYAN}ğŸ§¹ TAM TEMÄ°ZLÄ°K${NC}"
    echo "================"
    echo ""

    clean_temp_files
    clean_cache_files
    clean_log_files

    echo -e "${GREEN}ğŸ‰ Tam temizlik tamamlandÄ±!${NC}"
}

# Ana kontrol akÄ±ÅŸÄ±
case $CLEAN_TYPE in
    "temp")
        clean_temp_files
        ;;
    "logs")
        clean_log_files
        ;;
    "cache")
        clean_cache_files
        ;;
    "all")
        clean_all
        ;;
esac

# Son durum
echo -e "${CYAN}ğŸ’¡ YARALI KOMUTLAR:${NC}"
echo "  oba-clean temp            GeÃ§ici dosyalarÄ± temizle"
echo "  oba-clean logs            Eski loglarÄ± temizle"
echo "  oba-clean cache           Cache dosyalarÄ±nÄ± temizle"
echo "  oba-clean all force       TÃ¼mÃ¼nÃ¼ zorla temizle"
echo ""
echo -e "${GREEN}âœ¨ Temizlik iÅŸlemi tamamlandÄ±!${NC}"

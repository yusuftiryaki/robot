#!/bin/bash
# -*- coding: utf-8 -*-
#
# Otonom BahÃ§e AsistanÄ± (OBA) - Robot Durdurma Scripti
# ===================================================
#
# Bu script Ã§alÄ±ÅŸan robot instance'larÄ±nÄ± gÃ¼venli bir ÅŸekilde durdurur.
#

# Proje ana dizinine git
cd "$(dirname "$0")/.."

# Renk kodlarÄ±
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
PURPLE='\033[0;35m'
CYAN='\033[0;36m'
NC='\033[0m' # No Color

# DeÄŸiÅŸkenler
FORCE_KILL=false
TIMEOUT=10
VERBOSE=false

# YardÄ±m fonksiyonu
show_help() {
    echo -e "${CYAN}"
    echo "ğŸ›‘ ROBOT DURDURMA ARACI"
    echo "======================="
    echo -e "${NC}"
    echo "KullanÄ±m: oba-stop [seÃ§enekler]"
    echo ""
    echo "SeÃ§enekler:"
    echo "  --force, -f           Zorla durdur (SIGKILL)"
    echo "  --timeout, -t <sn>    Bekleme sÃ¼resi (varsayÄ±lan: 10 saniye)"
    echo "  --verbose, -v         DetaylÄ± Ã§Ä±ktÄ±"
    echo "  --help, -h            Bu yardÄ±m mesajÄ±nÄ± gÃ¶ster"
    echo ""
    echo "Ã–rnekler:"
    echo "  oba-stop                  GÃ¼venli durdurma"
    echo "  oba-stop --force          Zorla durdur"
    echo "  oba-stop --timeout 20     20 saniye bekle"
    echo "  oba-stop --verbose        DetaylÄ± Ã§Ä±ktÄ± ile"
    echo ""
    exit 0
}

# Parametreleri iÅŸle
while [[ $# -gt 0 ]]; do
    case $1 in
        --force|-f)
            FORCE_KILL=true
            shift
            ;;
        --timeout|-t)
            TIMEOUT="$2"
            shift 2
            ;;
        --verbose|-v)
            VERBOSE=true
            shift
            ;;
        --help|-h)
            show_help
            ;;
        *)
            echo -e "${RED}âŒ Bilinmeyen parametre: $1${NC}"
            echo "YardÄ±m iÃ§in: oba-stop --help"
            exit 1
            ;;
    esac
done

# Banner
echo -e "${CYAN}"
echo "ğŸ›‘ ROBOT DURDURMA ARACI"
echo "======================="
echo -e "${NC}"

# Ã‡alÄ±ÅŸan robot instance'larÄ±nÄ± bul
echo "ğŸ” Ã‡alÄ±ÅŸan robot instance'larÄ± taranÄ±yor..."

# Robot process'lerini bul
ROBOT_PIDS=$(ps aux | grep -E "python.*main\.py|python.*robot\.py" | grep -v grep | awk '{print $2}')

if [[ -z "$ROBOT_PIDS" ]]; then
    echo -e "${GREEN}âœ… Ã‡alÄ±ÅŸan robot instance'Ä± bulunamadÄ±${NC}"
    exit 0
fi

# Bulunan process'leri listele
echo -e "${BLUE}ğŸ“‹ Bulunan robot process'leri:${NC}"
ps aux | grep -E "python.*main\.py|python.*robot\.py" | grep -v grep | while read line; do
    echo "  $line"
done

echo ""
echo -e "${YELLOW}âš ï¸ $(echo "$ROBOT_PIDS" | wc -w) robot instance'Ä± bulundu${NC}"

# Onay al (force mode'da deÄŸilse)
if [[ "$FORCE_KILL" != "true" ]]; then
    echo -n "Bu process'leri durdurmak istiyor musunuz? (y/N): "
    read -r response
    if [[ ! "$response" =~ ^[Yy]$ ]]; then
        echo -e "${BLUE}â„¹ï¸ Ä°ÅŸlem iptal edildi${NC}"
        exit 0
    fi
fi

# Durdurma iÅŸlemi
echo -e "${BLUE}ğŸ›‘ Robot instance'larÄ± durduruluyor...${NC}"

for pid in $ROBOT_PIDS; do
    # Process bilgilerini al
    if [[ "$VERBOSE" == "true" ]]; then
        process_info=$(ps -p "$pid" -o pid,ppid,cmd --no-headers 2>/dev/null)
        if [[ -n "$process_info" ]]; then
            echo -e "${CYAN}ğŸ“‹ Process: $process_info${NC}"
        fi
    fi

    # Process'in hala Ã§alÄ±ÅŸÄ±p Ã§alÄ±ÅŸmadÄ±ÄŸÄ±nÄ± kontrol et
    if ! kill -0 "$pid" 2>/dev/null; then
        echo -e "${YELLOW}âš ï¸ Process $pid zaten durdurulmuÅŸ${NC}"
        continue
    fi

    if [[ "$FORCE_KILL" == "true" ]]; then
        # Zorla durdur
        echo -e "${RED}ğŸ’€ Process $pid zorla durduruluyor (SIGKILL)${NC}"
        kill -9 "$pid" 2>/dev/null
        if [[ $? -eq 0 ]]; then
            echo -e "${GREEN}âœ… Process $pid zorla durduruldu${NC}"
        else
            echo -e "${RED}âŒ Process $pid durdurulamadÄ±${NC}"
        fi
    else
        # GÃ¼venli durdurma
        echo -e "${BLUE}ğŸ“¤ Process $pid iÃ§in SIGTERM gÃ¶nderiliyor${NC}"
        kill -TERM "$pid" 2>/dev/null

        if [[ $? -eq 0 ]]; then
            echo -e "${YELLOW}â±ï¸ Process $pid iÃ§in $TIMEOUT saniye bekleniyor${NC}"

            # Bekleme dÃ¶ngÃ¼sÃ¼
            wait_count=0
            while kill -0 "$pid" 2>/dev/null && [[ $wait_count -lt $TIMEOUT ]]; do
                sleep 1
                ((wait_count++))
                if [[ "$VERBOSE" == "true" ]]; then
                    echo -e "${CYAN}â³ Bekleme: $wait_count/$TIMEOUT saniye${NC}"
                fi
            done

            # Hala Ã§alÄ±ÅŸÄ±yor mu kontrol et
            if kill -0 "$pid" 2>/dev/null; then
                echo -e "${YELLOW}âš ï¸ Process $pid SIGTERM'e yanÄ±t vermedi, SIGKILL gÃ¶nderiliyor${NC}"
                kill -9 "$pid" 2>/dev/null
                if [[ $? -eq 0 ]]; then
                    echo -e "${GREEN}âœ… Process $pid zorla durduruldu${NC}"
                else
                    echo -e "${RED}âŒ Process $pid durdurulamadÄ±${NC}"
                fi
            else
                echo -e "${GREEN}âœ… Process $pid gÃ¼venli bir ÅŸekilde durduruldu${NC}"
            fi
        else
            echo -e "${RED}âŒ Process $pid'e sinyal gÃ¶nderilemedi${NC}"
        fi
    fi
done

echo ""

# Final kontrol
echo "ğŸ” Final kontrol yapÄ±lÄ±yor..."
REMAINING_PIDS=$(ps aux | grep -E "python.*main\.py|python.*robot\.py" | grep -v grep | awk '{print $2}')

if [[ -z "$REMAINING_PIDS" ]]; then
    echo -e "${GREEN}âœ… TÃ¼m robot instance'larÄ± baÅŸarÄ±yla durduruldu${NC}"
else
    echo -e "${RED}âŒ BazÄ± robot instance'larÄ± hala Ã§alÄ±ÅŸÄ±yor:${NC}"
    ps aux | grep -E "python.*main\.py|python.*robot\.py" | grep -v grep
    echo ""
    echo -e "${YELLOW}ğŸ’¡ Kalan process'ler iÃ§in --force seÃ§eneÄŸini kullanmayÄ± deneyin${NC}"
    exit 1
fi

echo ""
echo -e "${GREEN}ğŸ‰ Robot durdurma iÅŸlemi tamamlandÄ±!${NC}"
echo ""
echo "ğŸ’¡ FaydalÄ± komutlar:"
echo "  oba-status     Robot durumunu kontrol et"
echo "  oba-start      Robotu yeniden baÅŸlat"
echo "  oba-logs       Log dosyalarÄ±nÄ± gÃ¶rÃ¼ntÃ¼le"
echo ""
echo "ğŸ‘‹ Kolay gelsin! ğŸ¤–"

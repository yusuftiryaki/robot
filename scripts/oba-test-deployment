#!/bin/bash
# ğŸ§ª OBA Deployment Test Script
# HacÄ± Abi'nin test aracÄ±!

# Renkler
readonly RED='\033[0;31m'
readonly GREEN='\033[0;32m'
readonly YELLOW='\033[1;33m'
readonly BLUE='\033[0;34m'
readonly CYAN='\033[0;36m'
readonly NC='\033[0m'

# Test sonuÃ§larÄ±
TESTS_PASSED=0
TESTS_FAILED=0
TESTS_TOTAL=0

# Test fonksiyonu
run_test() {
    local test_name="$1"
    local test_command="$2"
    local pi_ip="$3"
    local pi_user="$4"
    local pi_password="$5"
    local pi_port="${6:-22}"

    TESTS_TOTAL=$((TESTS_TOTAL + 1))

    echo -e "${BLUE}ğŸ§ª Test: $test_name${NC}"

    # SSH komutu hazÄ±rla
    local ssh_cmd="ssh -o ConnectTimeout=10 -o StrictHostKeyChecking=no -p $pi_port $pi_user@$pi_ip"

    if [[ -n "$pi_password" ]]; then
        ssh_cmd="sshpass -p '$pi_password' $ssh_cmd"
    fi

    # Test Ã§alÄ±ÅŸtÄ±r
    if eval "$ssh_cmd '$test_command'" &> /dev/null; then
        echo -e "${GREEN}   âœ… BAÅARILI${NC}"
        TESTS_PASSED=$((TESTS_PASSED + 1))
        return 0
    else
        echo -e "${RED}   âŒ BAÅARISIZ${NC}"
        TESTS_FAILED=$((TESTS_FAILED + 1))
        return 1
    fi
}

# Ana test fonksiyonu
test_deployment() {
    local pi_ip="$1"
    local pi_user="$2"
    local pi_password="$3"
    local pi_port="${4:-22}"

    echo -e "${CYAN}"
    echo "ğŸ§ª OBA Robot Deployment Test"
    echo "============================="
    echo -e "${NC}"
    echo "ğŸ“ Target: $pi_user@$pi_ip"
    echo ""    # SSH baÄŸlantÄ± testi
    echo -e "${YELLOW}ğŸ“¡ BAÄLANTI TESTLERÄ°${NC}"
    run_test "SSH BaÄŸlantÄ±sÄ±" "echo 'OK'" "$pi_ip" "$pi_user" "$pi_password" "$pi_port"
    run_test "Sudo Yetkisi" "sudo -n true" "$pi_ip" "$pi_user" "$pi_password" "$pi_port"

    echo ""

    # Sistem testleri
    echo -e "${YELLOW}âš™ï¸ SÄ°STEM TESTLERÄ°${NC}"
    run_test "Python3 VarlÄ±ÄŸÄ±" "which python3" "$pi_ip" "$pi_user" "$pi_password" "$pi_port"
    run_test "Git VarlÄ±ÄŸÄ±" "which git" "$pi_ip" "$pi_user" "$pi_password" "$pi_port"
    run_test "I2C DesteÄŸi" "ls /dev/i2c-*" "$pi_ip" "$pi_user" "$pi_password" "$pi_port"
    run_test "GPIO Grubu" "groups | grep gpio" "$pi_ip" "$pi_user" "$pi_password" "$pi_port"

    echo ""

    # OBA proje testleri
    echo -e "${YELLOW}ğŸ¤– OBA PROJE TESTLERÄ°${NC}"
    run_test "OBA KlasÃ¶rÃ¼" "ls -d oba" "$pi_ip" "$pi_user" "$pi_password" "$pi_port"
    run_test "Python Venv" "ls oba/venv/bin/python" "$pi_ip" "$pi_user" "$pi_password" "$pi_port"
    run_test "Config DosyasÄ±" "ls oba/config/robot_config.yaml" "$pi_ip" "$pi_user" "$pi_password" "$pi_port"
    run_test "Script Ä°zinleri" "ls -l oba/scripts/oba-help | grep 'x'" "$pi_ip" "$pi_user" "$pi_password" "$pi_port"

    echo ""

    # Service testleri
    echo -e "${YELLOW}ğŸš€ SERVÄ°S TESTLERÄ°${NC}"
    run_test "Systemd Service" "sudo systemctl is-enabled oba-robot.service" "$pi_ip" "$pi_user" "$pi_password" "$pi_port"
    run_test "Service Durumu" "sudo systemctl is-active oba-robot.service" "$pi_ip" "$pi_user" "$pi_password" "$pi_port"
    run_test "Port 8080" "netstat -tlnp | grep 8080" "$pi_ip" "$pi_user" "$pi_password" "$pi_port"

    echo ""

    # Web interface testi
    echo -e "${YELLOW}ğŸŒ WEB INTERFACE TESTLERÄ°${NC}"
    run_test "HTTP Response" "curl -s -o /dev/null -w '%{http_code}' http://localhost:8080 | grep 200" "$pi_ip" "$pi_user" "$pi_password" "$pi_port"
    run_test "API Endpoint" "curl -s http://localhost:8080/api/robot/status | grep success" "$pi_ip" "$pi_user" "$pi_password" "$pi_port"

    echo ""

    # Python modÃ¼l testleri
    echo -e "${YELLOW}ğŸ PYTHON MODÃœL TESTLERÄ°${NC}"
    run_test "Robot ModÃ¼lÃ¼" "cd oba && source venv/bin/activate && python -c 'import src.core.robot'" "$pi_ip" "$pi_user" "$pi_password" "$pi_port"
    run_test "OpenCV" "cd oba && source venv/bin/activate && python -c 'import cv2'" "$pi_ip" "$pi_user" "$pi_password" "$pi_port"
    run_test "NumPy" "cd oba && source venv/bin/activate && python -c 'import numpy'" "$pi_ip" "$pi_user" "$pi_password" "$pi_port"

    echo ""

    # Encoder/DonanÄ±m testleri
    echo -e "${YELLOW}ğŸ”„ ENCODER VE DONANIM TESTLERÄ°${NC}"
    run_test "GPIO EriÅŸimi" "cd oba && source venv/bin/activate && python -c 'import RPi.GPIO; print(\"GPIO OK\")'" "$pi_ip" "$pi_user" "$pi_password" "$pi_port"
    run_test "I2C CihazlarÄ±" "i2cdetect -y 1 | grep UU" "$pi_ip" "$pi_user" "$pi_password" "$pi_port"
    run_test "Encoder Config" "cd oba && grep -q 'encoders:' config/robot_config.yaml" "$pi_ip" "$pi_user" "$pi_password" "$pi_port"
    run_test "Sensor Okuyucu" "cd oba && source venv/bin/activate && python -c 'from src.hardware.sensor_okuyucu import SensorOkuyucu; print(\"Sensor OK\")'" "$pi_ip" "$pi_user" "$pi_password" "$pi_port"

    echo ""

    # SonuÃ§larÄ± gÃ¶ster
    echo -e "${CYAN}ğŸ“Š TEST SONUÃ‡LARI${NC}"
    echo "================="
    echo -e "${GREEN}âœ… BaÅŸarÄ±lÄ±: $TESTS_PASSED${NC}"
    echo -e "${RED}âŒ BaÅŸarÄ±sÄ±z: $TESTS_FAILED${NC}"
    echo -e "${BLUE}ğŸ“‹ Toplam: $TESTS_TOTAL${NC}"

    local success_rate=$((TESTS_PASSED * 100 / TESTS_TOTAL))
    echo -e "${CYAN}ğŸ“ˆ BaÅŸarÄ± OranÄ±: %$success_rate${NC}"

    echo ""

    if [[ $TESTS_FAILED -eq 0 ]]; then
        echo -e "${GREEN}ğŸ‰ TÃœM TESTLER BAÅARILI!${NC}"
        echo -e "${GREEN}Robot production-ready! ğŸš€${NC}"
        echo ""
        echo -e "${CYAN}ğŸŒ Web Interface: http://$pi_ip:8080${NC}"
        return 0
    else
        echo -e "${RED}âš ï¸ BAZI TESTLER BAÅARISIZ!${NC}"
        echo "LÃ¼tfen deployment'Ä± tekrar kontrol edin."
        echo ""
        echo "YaygÄ±n sorunlar iÃ§in:"
        echo "â€¢ oba-deploy --help"
        echo "â€¢ docs/deployment/raspberry_pi_setup.md"
        return 1
    fi
}

# YardÄ±m mesajÄ±
show_help() {
    cat << EOF
ğŸ§ª OBA Robot Deployment Test

Bu script deployment sonrasÄ±nda sistemi test eder.

KULLANIM:
    oba-test-deployment --ip <PI_IP> [SEÃ‡ENEKLER]

PARAMETRELER:
    -i, --ip <IP>              Raspberry Pi IP adresi
    -p, --password <PASS>      SSH ÅŸifresi (opsiyonel)
    -u, --user <USER>          SSH kullanÄ±cÄ±sÄ± (varsayÄ±lan: pi)
    -h, --help                 Bu yardÄ±m mesajÄ±nÄ± gÃ¶ster

Ã–RNEKLER:
    oba-test-deployment --ip 192.168.1.100
    oba-test-deployment -i 192.168.1.100 -p mypassword

TEST KATEGORÄ°LERÄ°:
    ğŸ“¡ BaÄŸlantÄ± Testleri
    âš™ï¸ Sistem Testleri
    ğŸ¤– OBA Proje Testleri
    ğŸš€ Servis Testleri
    ğŸŒ Web Interface Testleri
    ğŸ Python ModÃ¼l Testleri
    ğŸ”„ Encoder ve DonanÄ±m Testleri

HacÄ± Abi'nin test aracÄ±! ğŸ§ª
EOF
}

# Parametre parse
PI_IP=""
PI_PASSWORD=""
PI_USER="pi"
PI_PORT="22"

while [[ $# -gt 0 ]]; do
    case $1 in
        -i|--ip)
            PI_IP="$2"
            shift 2
            ;;
        -p|--password)
            PI_PASSWORD="$2"
            shift 2
            ;;
        -u|--user)
            PI_USER="$2"
            shift 2
            ;;
        --port)
            PI_PORT="$2"
            shift 2
            ;;
        -h|--help)
            show_help
            exit 0
            ;;
        *)
            echo -e "${RED}âŒ Bilinmeyen parametre: $1${NC}"
            echo "YardÄ±m iÃ§in: oba-test-deployment --help"
            exit 1
            ;;
    esac
done

# IP kontrolÃ¼
if [[ -z "$PI_IP" ]]; then
    echo -e "${RED}âŒ Raspberry Pi IP adresi gerekli!${NC}"
    echo "Ã–rnek: oba-test-deployment --ip 192.168.1.100"
    exit 1
fi

# sshpass kontrolÃ¼
if [[ -n "$PI_PASSWORD" ]] && ! command -v sshpass &> /dev/null; then
    echo -e "${RED}âŒ sshpass bulunamadÄ±!${NC}"
    echo "Kurulum: sudo apt install sshpass"
    exit 1
fi

# Testleri Ã§alÄ±ÅŸtÄ±r
test_deployment "$PI_IP" "$PI_USER" "$PI_PASSWORD" "$PI_PORT"

#!/bin/bash
# ğŸ§ª OBA Deployment Test Environment Manager
# HacÄ± Abi'nin test aracÄ±!

set -e

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PROJECT_ROOT="$(dirname "$SCRIPT_DIR")"

# Renkler
readonly GREEN='\033[0;32m'
readonly YELLOW='\033[1;33m'
readonly CYAN='\033[0;36m'
readonly RED='\033[0;31m'
readonly BLUE='\033[0;34m'
readonly NC='\033[0m'

# Container ve port bilgileri
CONTAINER_NAME="oba-test-pi"
TEST_PORT=2222
WEB_PORT=8080
IMAGE_NAME="oba-test-pi"

# Dinamik IP tespiti - Container'Ä±n gerÃ§ek IP'sini al
detect_target_ip() {
    if docker ps | grep -q "$CONTAINER_NAME"; then
        # Container Ã§alÄ±ÅŸÄ±yorsa IP'sini al
        docker inspect "$CONTAINER_NAME" --format='{{range .NetworkSettings.Networks}}{{.IPAddress}}{{end}}' 2>/dev/null || echo "127.0.0.1"
    else
        # Container Ã§alÄ±ÅŸmÄ±yorsa localhost dÃ¶ndÃ¼r
        echo "127.0.0.1"
    fi
}

# Global deÄŸiÅŸken olarak target IP'yi dinamik olarak al
get_target_ip() {
    detect_target_ip
}

show_help() {
    echo -e "${CYAN}"
    cat << "EOF"
ğŸ§ª OBA Deployment Test Environment
===================================
   ____  ____    _      ______ _____ ____ ______
  / __ \|  _ \  / \    |  ____|_   _/ ___|__   _|
 | |  | | |_) |/ _ \   | |__    | | \___ \  | |
 | |__| |  _ </ ___ \  |  __|   | |  ___) | | |
  \____/|_| \_\_/   \_\|_|     |_| |____/  |_|

   Deployment Script Test Environment
EOF
    echo -e "${NC}"
    echo ""
    echo "Bu script OBA deployment script'lerini test etmek iÃ§in"
    echo "simÃ¼le edilmiÅŸ Raspberry Pi environment'Ä± saÄŸlar."
    echo ""
    echo -e "${YELLOW}KOMUTLAR:${NC}"
    echo "  start    - Test container'Ä± baÅŸlat"
    echo "  stop     - Test container'Ä± durdur"
    echo "  restart  - Container'Ä± yeniden baÅŸlat"
    echo "  clean    - Container'Ä± sil ve temizle"
    echo "  ssh      - Container'a SSH ile baÄŸlan"
    echo "  logs     - Container loglarÄ±nÄ± gÃ¶ster"
    echo "  status   - Container durumunu gÃ¶ster"
    echo "  test     - Deployment script'ini test et"
    echo "  quick    - Quick deploy test et"
    echo "  validate - Test deployment'Ä± doÄŸrula"
    echo "  shell    - Container iÃ§inde bash aÃ§"
    echo "  rebuild  - Image'Ä± yeniden build et"
    echo ""
    echo -e "${YELLOW}TEST SENARYOLARI:${NC}"
    echo "  1. ./oba-test-env start"
    echo "  2. ./oba-test-env test"
    echo "  3. ./oba-test-env validate"
    echo "  4. ./oba-test-env clean"
    echo ""
    echo -e "${CYAN}HacÄ± Abi'nin test laboratuvarÄ±! ğŸ§ª${NC}"
}

log_info() {
    echo -e "${GREEN}â„¹ï¸  $1${NC}"
}

log_warn() {
    echo -e "${YELLOW}âš ï¸  $1${NC}"
}

log_error() {
    echo -e "${RED}âŒ $1${NC}"
}

log_step() {
    echo -e "${CYAN}ğŸ”„ $1${NC}"
}

log_success() {
    echo -e "${GREEN}âœ… $1${NC}"
}

check_docker() {
    if ! command -v docker &> /dev/null; then
        log_error "Docker bulunamadÄ±! Docker Desktop kurmalÄ±sÄ±nÄ±z."
        exit 1
    fi

    if ! docker info &> /dev/null; then
        log_error "Docker daemon Ã§alÄ±ÅŸmÄ±yor! Docker'Ä± baÅŸlatÄ±n."
        exit 1
    fi
}

build_image() {
    log_step "Docker image build ediliyor..."

    # Dockerfile'Ä±n var olduÄŸunu kontrol et
    if [ ! -f "$PROJECT_ROOT/docker/Dockerfile.test-pi" ]; then
        log_error "Dockerfile bulunamadÄ±: $PROJECT_ROOT/docker/Dockerfile.test-pi"
        exit 1
    fi

    # Start script'inin executable olduÄŸundan emin ol
    chmod +x "$PROJECT_ROOT/docker/start-test-env.sh"

    # Image build et
    docker build \
        -f "$PROJECT_ROOT/docker/Dockerfile.test-pi" \
        -t "$IMAGE_NAME" \
        "$PROJECT_ROOT"

    log_success "Docker image hazÄ±r: $IMAGE_NAME"
}

start_container() {
    check_docker

    # Image var mÄ± kontrol et
    if ! docker images | grep -q "$IMAGE_NAME"; then
        log_warn "Image bulunamadÄ±, build ediliyor..."
        build_image
    fi

    # Container zaten Ã§alÄ±ÅŸÄ±yor mu?
    if docker ps | grep -q "$CONTAINER_NAME"; then
        log_warn "Container zaten Ã§alÄ±ÅŸÄ±yor!"
        return 0
    fi

    # DurdurulmuÅŸ container var mÄ±?
    if docker ps -a | grep -q "$CONTAINER_NAME"; then
        log_step "Eski container temizleniyor..."
        docker rm "$CONTAINER_NAME" &>/dev/null || true
    fi

    log_step "Test container baÅŸlatÄ±lÄ±yor..."

    # Container'Ä± default bridge network ile Ã§alÄ±ÅŸtÄ±r (dev container ile aynÄ± network)
    docker run -d \
        --name "$CONTAINER_NAME" \
        -p "$TEST_PORT:22" \
        -p "$WEB_PORT:8080" \
        --privileged \
        -v "$PROJECT_ROOT:/host-project:ro" \
        "$IMAGE_NAME"

    # SSH hazÄ±r olmasÄ±nÄ± bekle
    log_step "SSH servisinin hazÄ±r olmasÄ± bekleniyor..."
    for i in {1..30}; do
        if docker exec "$CONTAINER_NAME" pgrep sshd >/dev/null 2>&1; then
            break
        fi
        sleep 1
        if [ $i -eq 30 ]; then
            log_error "SSH servisi 30 saniyede hazÄ±r olmadÄ±!"
            docker logs "$CONTAINER_NAME"
            exit 1
        fi
    done

    log_success "Test container hazÄ±r!"

    # Dinamik IP'yi al
    local target_ip
    target_ip=$(detect_target_ip)

    echo ""
    echo -e "${CYAN}ğŸ“‹ BAÄLANTI BÄ°LGÄ°LERÄ°${NC}"
    echo "=========================="
    echo -e "${GREEN}ğŸ“¡ SSH (dev container'dan):${NC} ssh -p 22 pi@$target_ip"
    echo -e "${GREEN}ğŸ“¡ SSH (localhost'tan):${NC} ssh -p $TEST_PORT pi@localhost"
    echo -e "${GREEN}ğŸ”‘ Åifre:${NC} raspberry"
    echo -e "${GREEN}ğŸŒ Web:${NC} http://$target_ip:$WEB_PORT"
    echo -e "${GREEN}ğŸ‘¤ KullanÄ±cÄ±:${NC} pi"
    echo -e "${GREEN}ğŸ”— Container IP:${NC} $target_ip"
    echo ""
    echo -e "${YELLOW}ğŸ’¡ Test komutlarÄ±:${NC}"
    echo "  oba-test-env ssh      # SSH baÄŸlantÄ±sÄ±"
    echo "  oba-test-env test     # Deployment test"
    echo "  oba-test-env logs     # LoglarÄ± izle"
}

stop_container() {
    if docker ps | grep -q "$CONTAINER_NAME"; then
        log_step "Container durduruluyor..."
        docker stop "$CONTAINER_NAME" &>/dev/null
        log_success "Container durduruldu"
    else
        log_warn "Container zaten durdurulmuÅŸ"
    fi
}

clean_container() {
    stop_container
    if docker ps -a | grep -q "$CONTAINER_NAME"; then
        log_step "Container temizleniyor..."
        docker rm "$CONTAINER_NAME" &>/dev/null
        log_success "Container temizlendi"
    fi

    # Image'Ä± da sil (opsiyonel)
    echo -e "${YELLOW}Docker image'Ä± da silinsin mi? (y/N):${NC}"
    read -r response
    if [[ "$response" =~ ^[Yy]$ ]]; then
        docker rmi "$IMAGE_NAME" &>/dev/null || true
        log_success "Docker image silindi"
    fi
}

ssh_to_container() {
    if ! docker ps | grep -q "$CONTAINER_NAME"; then
        log_error "Container Ã§alÄ±ÅŸmÄ±yor! Ã–nce 'start' komutunu Ã§alÄ±ÅŸtÄ±rÄ±n."
        exit 1
    fi

    local target_ip
    target_ip=$(detect_target_ip)

    log_info "SSH baÄŸlantÄ±sÄ± kuruluyor ($target_ip)..."
    echo -e "${YELLOW}Åifre: raspberry${NC}"
    # Container'Ä±n gerÃ§ek IP'sine port 22 ile baÄŸlan (port mapping deÄŸil)
    ssh -p 22 -o StrictHostKeyChecking=no pi@"$target_ip"
}

test_deployment() {
    if ! docker ps | grep -q "$CONTAINER_NAME"; then
        log_error "Container Ã§alÄ±ÅŸmÄ±yor! Ã–nce 'start' komutunu Ã§alÄ±ÅŸtÄ±rÄ±n."
        exit 1
    fi

    # Dinamik IP al
    local target_ip
    target_ip=$(detect_target_ip)

    log_step "Deployment script test ediliyor..."
    echo ""

    # Test deployment'Ä± Ã§alÄ±ÅŸtÄ±r
    echo -e "${CYAN}ğŸ§ª Test parametreleri:${NC}"
    echo "  IP: $target_ip"
    echo "  Port: 22 (container internal)"
    echo "  User: pi"
    echo "  Password: raspberry"
    echo ""

    "$SCRIPT_DIR/oba-deploy" \
        --ip "$target_ip" \
        --port 22 \
        --user pi \
        --password raspberry \
        --skip-system-update \
        --verbose

    log_success "Deployment test tamamlandÄ±!"
}

quick_test() {
    if ! docker ps | grep -q "$CONTAINER_NAME"; then
        log_error "Container Ã§alÄ±ÅŸmÄ±yor! Ã–nce 'start' komutunu Ã§alÄ±ÅŸtÄ±rÄ±n."
        exit 1
    fi

    # Dinamik IP al
    local target_ip
    target_ip=$(detect_target_ip)

    log_step "Quick deployment test..."

    # Git repository URL'yi gÃ¼ncelle
    local temp_script="/tmp/oba-quick-deploy-test"

    # Quick deploy script'ini kopyala ve dÃ¼zenle
    cp "$SCRIPT_DIR/oba-quick-deploy" "$temp_script"

    # Otomatik cevaplar iÃ§in expect benzeri yaklaÅŸÄ±m
    {
        echo "$target_ip"         # IP
        echo "raspberry"          # Password
        echo "pi"                 # User
        echo "y"                  # Skip update
        echo "y"                  # Skip hardware test
        echo "y"                  # Confirm
    } | "$temp_script" || true

    rm -f "$temp_script"

    log_success "Quick test tamamlandÄ±!"
}

validate_deployment() {
    if ! docker ps | grep -q "$CONTAINER_NAME"; then
        log_error "Container Ã§alÄ±ÅŸmÄ±yor! Ã–nce 'start' komutunu Ã§alÄ±ÅŸtÄ±rÄ±n."
        exit 1
    fi

    # Dinamik IP al
    local target_ip
    target_ip=$(detect_target_ip)

    log_step "Deployment validation..."

    "$SCRIPT_DIR/oba-test-deployment" \
        --ip "$target_ip" \
        --port 22 \
        --user pi \
        --password raspberry

    log_success "Validation tamamlandÄ±!"
}

show_status() {
    echo -e "${CYAN}ğŸ“Š Test Environment Durumu${NC}"
    echo "============================="

    if docker ps | grep -q "$CONTAINER_NAME"; then
        log_success "Container Ã§alÄ±ÅŸÄ±yor"

        # Dinamik IP al
        local target_ip
        target_ip=$(detect_target_ip)

        echo ""
        echo -e "${CYAN}ğŸ“‹ Container bilgileri:${NC}"
        docker ps --filter "name=$CONTAINER_NAME" --format "table {{.Names}}\t{{.Status}}\t{{.Ports}}"

        echo ""
        echo -e "${CYAN}ğŸ“¡ BaÄŸlantÄ± bilgileri:${NC}"
        echo "  SSH (dev container'dan): ssh -p 22 pi@$target_ip"
        echo "  SSH (localhost'tan): ssh -p $TEST_PORT pi@localhost"
        echo "  Web: http://$target_ip:$WEB_PORT"
        echo "  Container IP: $target_ip"
        echo "  Åifre: raspberry"

        echo ""
        echo -e "${CYAN}ğŸ’¾ Kaynak kullanÄ±mÄ±:${NC}"
        docker stats "$CONTAINER_NAME" --no-stream --format "table {{.CPUPerc}}\t{{.MemUsage}}\t{{.NetIO}}"

    else
        log_warn "Container Ã§alÄ±ÅŸmÄ±yor"
        if docker ps -a | grep -q "$CONTAINER_NAME"; then
            echo "  (DurdurulmuÅŸ container mevcut)"
        fi
    fi

    echo ""
    echo -e "${CYAN}ğŸ³ Docker images:${NC}"
    docker images | grep -E "(REPOSITORY|$IMAGE_NAME)" || echo "  Image bulunamadÄ±"
}

show_logs() {
    if docker ps | grep -q "$CONTAINER_NAME"; then
        log_info "Container loglarÄ± (Ctrl+C ile Ã§Ä±kÄ±ÅŸ):"
        docker logs -f "$CONTAINER_NAME"
    else
        log_error "Container Ã§alÄ±ÅŸmÄ±yor!"
    fi
}

container_shell() {
    if ! docker ps | grep -q "$CONTAINER_NAME"; then
        log_error "Container Ã§alÄ±ÅŸmÄ±yor! Ã–nce 'start' komutunu Ã§alÄ±ÅŸtÄ±rÄ±n."
        exit 1
    fi

    log_info "Container shell aÃ§Ä±lÄ±yor..."
    docker exec -it "$CONTAINER_NAME" bash
}

restart_container() {
    stop_container
    start_container
}

rebuild_image() {
    log_step "Image yeniden build ediliyor..."

    # Eski image'Ä± sil
    docker rmi "$IMAGE_NAME" &>/dev/null || true

    # Yeniden build et
    build_image

    # Container Ã§alÄ±ÅŸÄ±yorsa restart et
    if docker ps | grep -q "$CONTAINER_NAME"; then
        log_info "Container restart ediliyor..."
        restart_container
    fi
}

# Ana komut iÅŸleme
case "${1:-help}" in
    start)
        start_container
        ;;
    stop)
        stop_container
        ;;
    restart)
        restart_container
        ;;
    clean)
        clean_container
        ;;
    ssh)
        ssh_to_container
        ;;
    test)
        test_deployment
        ;;
    quick)
        quick_test
        ;;
    validate)
        validate_deployment
        ;;
    status)
        show_status
        ;;
    logs)
        show_logs
        ;;
    shell)
        container_shell
        ;;
    rebuild)
        rebuild_image
        ;;
    help|*)
        show_help
        ;;
esac
